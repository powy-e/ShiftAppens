// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String       @id @default(uuid())
  email      String       @unique
  name       String
  password   String
  university University[]
}

model Canteen {
  id           String      @id @default(uuid())
  canteenName  String
  capacity     Int
  latitude     String
  longitude    String
  //menus     Menu[]
  social       Boolean
  university   University? @relation(fields: [universityId], references: [id])
  universityId String?
}

model University {
  id       String    @id @default(uuid())
  name     String    @unique
  canteens Canteen[]
  User     User[]
}
