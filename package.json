{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "pnpm start",
    "build": "pnpm run build",
    "test": "pnpm test"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "tailwindcss": {
    "config": "./tailwind.config.js"
  },
  "pnpm": {
    "hooks": {
      "preinstall": "node -r esm ./scripts/pnpm/preinstall.js",
      "postinstall": "node -r esm ./scripts/pnpm/postinstall.js"
    }
  },
  "devDependencies": {
    "pnpm": "^8.2.0"
  }
}
